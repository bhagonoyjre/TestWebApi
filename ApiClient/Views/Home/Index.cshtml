@model AppLibrary.ViewModels.XMLStringVM
@{
    ViewBag.Title = "Client Page";
}


<h2>@ViewBag.Title.</h2>
<h3><span class="text-danger">@ViewBag.ResultMessage</span></h3>
<div class="row">
    @using (Html.BeginForm("SubmitXML", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.XMLString, htmlAttributes: new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.XMLString, 10, 300, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>        
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}